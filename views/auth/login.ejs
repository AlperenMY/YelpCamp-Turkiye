<% layout("layouts/boilerplate") %>
<h1>Login</h1>
<form action="/login" method="post" class="needs-validation" novalidate>
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="invalid-feedback">Please provide an unique username</div>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="invalid-feedback">Please provide a proper password</div>
  </div>
  <div class="mb-3">
    <button class="btn btn-success">Login</button>
  </div>
</form>
